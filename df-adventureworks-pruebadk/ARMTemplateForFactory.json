		{
			"name": "[concat(parameters('factoryName'), '/MargenBrutoPorcentaje')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "(Ventas netas − Costo de bienes vendidos) / Ventas netas, expresado en %; mide rentabilidad antes de gastos operativos",
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "DataSet_SQL_AdventureWorks",
								"type": "DatasetReference"
							},
							"name": "getData",
							"description": "(Ventas netas − Costo de bienes vendidos) / Ventas netas, expresado en %; mide rentabilidad antes de gastos operativos"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "DataSet_Sink_DataLake",
								"type": "DatasetReference"
							},
							"name": "saveData"
						}
					],
					"transformations": [],
					"scriptLines": [
						"source(output(",
						"          CustomerID as integer,",
						"          NameStyle as boolean,",
						"          Title as string,",
						"          FirstName as string,",
						"          MiddleName as string,",
						"          LastName as string,",
						"          Suffix as string,",
						"          CompanyName as string,",
						"          SalesPerson as string,",
						"          EmailAddress as string,",
						"          Phone as string,",
						"          PasswordHash as string,",
						"          PasswordSalt as string,",
						"          rowguid as string,",
						"          ModifiedDate as timestamp",
						"     ),",
						"     allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     isolationLevel: 'READ_UNCOMMITTED',",
						"     query: 'SELECT\\n  YEAR(h.OrderDate) AS Year,\\n  MONTH(h.OrderDate) AS Month,\\n  SUM(d.LineTotal) AS Revenue,\\n  SUM(p.StandardCost * d.OrderQty) AS COGS,\\n  CASE WHEN SUM(d.LineTotal) = 0 THEN NULL\\n       ELSE (SUM(d.LineTotal) - SUM(p.StandardCost * d.OrderQty)) * 100.0 / SUM(d.LineTotal)\\n  END AS GrossMarginPct\\nFROM SalesLT.SalesOrderHeader h\\nJOIN SalesLT.SalesOrderDetail d ON h.SalesOrderID = d.SalesOrderID\\nJOIN SalesLT.Product p ON d.ProductID = p.ProductID\\nWHERE h.OrderDate BETWEEN \\'2000-01-01\\' AND \\'2025-12-31\\'\\nGROUP BY YEAR(h.OrderDate), MONTH(h.OrderDate)',",
						"     format: 'query') ~> getData",
						"getData sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     format: 'parquet',",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true) ~> saveData"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DataSet_SQL_AdventureWorks')]",
				"[concat(variables('factoryId'), '/datasets/DataSet_Sink_DataLake')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/TasaEntregasATiempo')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "% de órdenes/lineas enviadas en o antes de la fecha de entrega esperada. (On-time deliveries / total deliveries) * 100.",
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "DataSet_SQL_AdventureWorks",
								"type": "DatasetReference"
							},
							"name": "getData",
							"description": "Import data from DataSet_SQL_AdventureWorks"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "DataSet_Sink_DataLake",
								"type": "DatasetReference"
							},
							"name": "saveData"
						}
					],
					"transformations": [],
					"scriptLines": [
						"source(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     isolationLevel: 'READ_UNCOMMITTED',",
						"     query: 'SELECT YEAR(h.ShipDate) AS Year, MONTH(h.ShipDate) AS Month,\\n       SUM(CASE WHEN h.ShipDate <= h.DueDate THEN 1 ELSE 0 END) * 100.0 / COUNT(*) AS OnTimePct,\\n       COUNT(*) AS TotalShipments\\nFROM SalesLT.SalesOrderHeader h\\nWHERE h.ShipDate IS NOT NULL AND h.ShipDate BETWEEN \\'2000-01-01\\' AND \\'2025-12-31\\'\\nGROUP BY YEAR(h.ShipDate), MONTH(h.ShipDate)',",
						"     format: 'query') ~> getData",
						"getData sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     format: 'parquet',",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true) ~> saveData"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DataSet_SQL_AdventureWorks')]",
				"[concat(variables('factoryId'), '/datasets/DataSet_Sink_DataLake')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Top5ProductosMes')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Para cada mes, identificar los 5 productos con mayor monto vendido",
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "DataSet_SQL_AdventureWorks",
								"type": "DatasetReference"
							},
							"name": "RAKING",
							"description": "CTE"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "DataSet_Sink_DataLake",
								"type": "DatasetReference"
							},
							"name": "saveData"
						}
					],
					"transformations": [
						{
							"name": "Condicion"
						}
					],
					"scriptLines": [
						"source(output(",
						"          {Año} as integer,",
						"          Mes as integer,",
						"          Producto as string,",
						"          VentasProducto as decimal(38,6),",
						"          RankingMensual as long",
						"     ),",
						"     allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     isolationLevel: 'READ_UNCOMMITTED',",
						"     query: 'SELECT \\n        DATEPART(YEAR, h.OrderDate) AS Año,\\n        DATEPART(MONTH, h.OrderDate) AS Mes,\\n        p.Name AS Producto,\\n        SUM(d.LineTotal) AS VentasProducto,\\n        RANK() OVER (\\n            PARTITION BY DATEPART(YEAR, h.OrderDate),\\n                         DATEPART(MONTH, h.OrderDate)\\n            ORDER BY SUM(d.LineTotal) DESC\\n        ) AS RankingMensual\\n    FROM SalesLT.SalesOrderHeader h\\n    JOIN SalesLT.SalesOrderDetail d \\n        ON h.SalesOrderID = d.SalesOrderID\\n    JOIN SalesLT.Product p\\n        ON d.ProductID = p.ProductID\\n    GROUP BY \\n        DATEPART(YEAR, h.OrderDate),\\n        DATEPART(MONTH, h.OrderDate),\\n        p.Name',",
						"     format: 'query') ~> RAKING",
						"RAKING filter(RankingMensual <= 5) ~> Condicion",
						"Condicion sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     format: 'parquet',",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true) ~> saveData"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DataSet_SQL_AdventureWorks')]",
				"[concat(variables('factoryId'), '/datasets/DataSet_Sink_DataLake')]"
			]
		},
