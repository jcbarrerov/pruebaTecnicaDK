{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "df-adventureworks-pruebadk"
		},
		"dl_adventureworks_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'dl_adventureworks'"
		},
		"sql_database_adventureworks_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'sql_database_adventureworks'"
		},
		"dl_adventureworks_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://datalakepruebadk.dfs.core.windows.net/"
		},
		"sql_database_adventureworks_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "server-adventrureworks-pruebadk.database.windows.net"
		},
		"sql_database_adventureworks_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "DB-ADVENTUREWORKS-PRUEBA"
		},
		"sql_database_adventureworks_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "adminadmin"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "df-adventureworks-pruebadk_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"dl_adventureworks_accountKey": {
						"value": "[parameters('dl_adventureworks_accountKey')]"
					},
					"sql_database_adventureworks_password": {
						"value": "[parameters('sql_database_adventureworks_password')]"
					},
					"dl_adventureworks_properties_typeProperties_url": {
						"value": "[parameters('dl_adventureworks_properties_typeProperties_url')]"
					},
					"sql_database_adventureworks_properties_typeProperties_server": {
						"value": "[parameters('sql_database_adventureworks_properties_typeProperties_server')]"
					},
					"sql_database_adventureworks_properties_typeProperties_database": {
						"value": "[parameters('sql_database_adventureworks_properties_typeProperties_database')]"
					},
					"sql_database_adventureworks_properties_typeProperties_userName": {
						"value": "[parameters('sql_database_adventureworks_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}